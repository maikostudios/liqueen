{
  "name": "liqueen",
  "version": "2.2.0",
  "description": "Liqueen - Generador Profesional de Liquidaciones",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"timeout /t 3 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "firebase": "^12.0.0",
    "node-machine-id": "^1.1.12",
    "vue": "^3.3.4",
    "vue-router": "^4.5.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "vite": "^4.4.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.maikostudios.liqueen",
    "productName": "Liqueen",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "artifactName": "liqueen-setup-${version}.${ext}",
      "shortcutName": "Liqueen"
    },
    "portable": {
      "artifactName": "liqueen-portable-${version}.${ext}"
    }
  },
  "type": "module"
}